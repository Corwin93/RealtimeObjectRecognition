<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ChooserActivity">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/btnStartTensorFlowDetectorActivity"
                android:onClick="startTensorFlowDetectorActivity"
                android:text="@string/start_tf_detector_label"
        />
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/btnStartLabelerActivity"
                android:onClick="startLabelerActivity"
                android:text="@string/start_mlkit_labeler_label"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>